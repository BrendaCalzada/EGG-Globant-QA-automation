Algoritmo ejercicio_4
	
	Definir frase, fraseCodi Como Caracter
	fraseCodi=''
	
	Escribir "Ingrese una frase para codificar"
	Leer frase
	
	codificar(frase,fraseCodi)
	
	Escribir fraseCodi
	
	decodificar(fraseCodi)
FinAlgoritmo



SubProceso codificar(frase,fraseCodi Por Referencia)
	Definir i, long Como Entero
	
	Definir codificado Como Caracter
	long=Longitud(frase)
	
	Si Subcadena(frase,long-1,long-1) = '.' Entonces
		
		Para i = 0 hasta long Hacer
			
			codificado=Subcadena(frase,i,i)
			
			Segun codificado
				"a":
					fraseCodi=concatenar(fraseCodi,"@")
				"e":
					fraseCodi=concatenar(fraseCodi,"#")
				"i":
					fraseCodi=concatenar(fraseCodi,"$")
				"o":
					fraseCodi=concatenar(fraseCodi,"%")
				"u":
					fraseCodi=concatenar(fraseCodi,"*")
				De Otro Modo:
					fraseCodi=concatenar(fraseCodi,codificado)
			FinSegun
		FinPara

	SiNo
		Escribir 'La frase debe terminar en punto, no se codificará'
		Escribir frase
		
	FinSi
	
	Escribir ''
	
FinSubProceso

SubProceso decodificar(frase)
	
	Definir i, long Como Entero
	
	Definir decodificado Como Caracter
	
	long=Longitud(frase)
	
	Para i = 0 hasta long Hacer
		
		decodificado=Subcadena(frase,i,i)
		
		Segun decodificado
			"@":
				Escribir sin saltar concatenar("","a")
			"#":
				Escribir sin saltar concatenar("","e")
			"$":
				Escribir sin saltar concatenar("","i")
			"%":
				Escribir sin saltar concatenar("","o")
			"*":
				Escribir sin saltar concatenar("","u")
			De Otro Modo:
				Escribir sin saltar decodificado
		FinSegun
	FinPara
	
	Escribir ''
	
FinSubProceso